<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title || 'Create Listing | Campus Exchange' %></title>
<link rel="icon" href="https://icons.veryicon.com/png/o/miscellaneous/icon-pack/graduation-hat-3.png" type="image/x-icon" />
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background-color: #f4f4f9;
    }

    header {
      background: #2c3e50;
      color: white;
      padding: 15px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .logo h2 {
      margin: 0;
      font-weight: 700;
      cursor: pointer;
    }

    nav {
      display: flex;
      align-items: center;
      gap: 1.25rem;
    }

    nav a {
      color: white;
      text-decoration: none;
      font-weight: 600;
      font-size: 1rem;
      transition: color 0.3s ease;
    }

    nav a:hover {
      color: #f1c40f;
      text-shadow: 0 0 5px #f1c40f;
    }

    .dropdown-toggle {
      background: transparent !important;
      border: none !important;
      color: white !important;
      font-size: 1.8rem;
      padding: 0;
      cursor: pointer;
    }

    footer {
      background: #2c3e50;
      color: white;
      text-align: center;
      padding: 20px;
      margin-top: 40px;
    }

    .form-container {
      max-width: 600px;
      margin: 50px auto;
      background: white;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0px 0px 12px rgba(0,0,0,0.1);
    }

    .form-container h2 {
      margin-bottom: 20px;
      font-weight: 700;
      color: #2c3e50;
    }

    .btn-primary {
      background-color: #3498db;
      border: none;
    }

    .btn-primary:hover {
      background-color: #2980b9;
    }
  </style>
</head>

<body>

  <!-- Header -->
  <header>
    <div class="logo" onclick="location.href='/sh'" role="button">
      <h2>Campus Exchange</h2>
    </div>
    <nav>
      <a href="/sh"><i class="fa-solid fa-house"></i></a>
      <a href="/sh/note">Notes</a>
      <a href="/sh/book">Books</a>
      <a href="/sh/stationary">Stationery</a>

      <!-- Dropdown -->
      <div class="dropdown">
        <button class="dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="fa-solid fa-circle-user"></i>
        </button>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
          <% if (!currUser) { %>
            <li><a class="dropdown-item" href="/sh/signup">Sign Up</a></li>
            <li><a class="dropdown-item" href="/sh/login">Sign In</a></li>
          <% } else { %>
            <li><a class="dropdown-item" href="/sh/profile">Profile</a></li>
            <li><hr class="dropdown-divider" /></li>
            <li><a class="dropdown-item" href="/sh/logout">Logout</a></li>
          <% } %>
        </ul>
      </div>
    </nav>
  </header>

  <!-- Main Content -->
  <main class="container">
    <div class="form-container">
      <h2>Create a New Stationery Listing</h2>

      <form action="/sh/createsta" method="POST"   class="needs-validation" novalidate        enctype="multipart/form-data">
        <!-- Title -->
        <div class="mb-3">
          <label for="title" class="form-label" required >Title</label>
          <input type="text" class="form-control" id="title" name="title" required>
        </div>
        <div class="invalid-feedback">
        Please title
      </div>
    <div class="valid-feedback">
      Looks good!
    </div>
        <!-- Price -->
        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input type="number" class="form-control" id="price" required name="price" step="1" required>
        </div>
            <div class="invalid-feedback">
      enter greater 0
    </div>

        <!-- Subject -->
        <div class="mb-3">
          <label for="subject" class="form-label">Subject</label>
          <input type="text" class="form-control" id="subject" name="subject" required>
        </div>
              <div class="invalid-feedback">
enter the subject     </div>
         <!-- Image Upload -->
          <div class="mb-3">
            <label for="image" class="form-label"  required >Upload Image</label>
            <input type="file" class="form-control" id="image" name="image" required accept="image/*">
          </div>
      <div class="invalid-feedback">
upload image    </div>
        <!-- Branch -->
        <div class="mb-3">
          <label for="branch"  required  class="form-label">Branch</label>
          <input type="text" class="form-control" id="branch" name="branch" required>
        </div>
     <div class="invalid-feedback">
enter youre branch   </div>
  <!-- Number -->
<div class="mb-3">
            <label for="whatsapp" class="form-label">phone no</label>
            <input type="text" class="form-control" id="whatsapp" maxlength="10" name="whatsapp" placeholder="+91xxxxxxx">
          </div>
        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Add Listing</button>
      </form>
    </div>
  </main>

  <!-- Footer -->
  <footer>
    <p>&copy; 2025 Campus Exchange | Made for Students</p>
  </footer>
<script>(function () {
  "use strict";

  // Fetch all the forms we want to apply custom validation to
  var forms = document.querySelectorAll(".needs-validation");

  // Loop over them and prevent submission
  Array.prototype.slice.call(forms).forEach(function (form) {
    form.addEventListener(
      "submit",
      function (event) {
        if (!form.checkValidity()) {
          event.preventDefault(); // Prevent form submission
          event.stopPropagation();
        }
        form.classList.add("was-validated"); // Show validation feedback
      },
      false
    );
  });
})();</script>
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
