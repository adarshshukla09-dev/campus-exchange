<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Books | Campus Exchange</title>
  <link rel="icon" href="https://icons.veryicon.com/png/o/miscellaneous/icon-pack/graduation-hat-3.png" type="image/x-icon" />

  <!-- Bootstrap & FontAwesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />

  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: rgba(0, 0, 0, 0.05);
    }

    /* Hero Section */
    .hero {
      background: linear-gradient(135deg, #3498db, #2980b9);
      color: white;
      text-align: center;
      padding: 60px 20px;
    }

    .hero h1 {
      font-size: 2.5rem;
      font-weight: bold;
      margin-bottom: 10px;
    }

    .hero p {
      font-size: 1.1rem;
      opacity: 0.95;
    }

    /* Cards */
    .container {
      margin-top: 40px;
    }

    .card {
      margin-bottom: 30px;
      border: none;
      border-radius: 12px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
    }

    .card-img-top {
      height: 200px;
      object-fit: cover;
      border-top-left-radius: 12px;
      border-top-right-radius: 12px;
    }

    .card-title {
      font-size: 1.25rem;
      font-weight: 600;
      color: #2c3e50;
    }

    .card-text {
      font-size: 0.95rem;
      color: #555;
    }

    .btn-sm {
      margin-right: 5px;
    }

    /* Footer */
    footer {
      background: #2c3e50;
      color: white;
      text-align: center;
      padding: 25px 20px;
      font-size: 0.95rem;
      font-weight: 500;
      margin-top: 60px;
    }

    /* Responsive Nav Customization */
    @media (max-width: 768px) {
      .navbar-brand {
        font-size: 1.2rem;
      }

      .navbar-nav .nav-link {
        font-size: 1rem;
        padding: 8px 12px;
      }

      .dropdown-menu {
        font-size: 0.95rem;
      }

      .navbar-toggler {
        border: none;
      }

      .navbar-toggler:focus {
        box-shadow: none;
      }

      .hero {
        padding: 20px;
      }

      .hero h1 {
        font-size: 1.5rem;
      }

      .hero p {
        font-size: 1rem;
      }

      .card {
        margin-bottom: 20px;
      }

      .card-img-top {
        height: auto;
        max-height: 250px;
      }

      .card-body {
        padding: 15px;
        font-size: 0.95rem;
      }

      .card-title {
        font-size: 1.2rem;
      }

      .card-text {
        font-size: 0.9rem;
      }

      .btn {
        width: 100%;
        margin-top: 5px;
      }
    }
  </style>
</head>

<body>
  <!-- Responsive Navbar -->
  <nav class="navbar navbar-expand-md navbar-dark sticky-top" style="background-color: #2c3e50;">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="/sh">Campus Exchange</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-end" id="mainNavbar">
        <ul class="navbar-nav mb-2 mb-md-0">
          <li class="nav-item">
            <a class="nav-link" href="/sh" title="Home"><i class="fa-solid fa-house"></i></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/sh/note">Notes</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/sh/book">Books</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/sh/stationary">Stationery</a>
          </li>

          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fa-solid fa-circle-user"></i>
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
              <% if (!currUser) { %>
                <li><a class="dropdown-item" href="/sh/signup">Sign Up</a></li>
                <li><a class="dropdown-item" href="/sh/login">Sign In</a></li>
              <% } else { %>
                <li><hr class="dropdown-divider" /></li>
                <li><a class="dropdown-item" href="/sh/logout">Logout</a></li>
              <% } %>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Hero -->
  <section class="hero">
    <h1>Browse Second-Hand Books</h1>
    <p>Affordable books for every subject, shared by students</p>
  </section>

  <!-- Book Grid -->
  <div class="container">
    <div class="row">
      <% for(let book of books) { %>
        <div class="col-lg-4 col-md-6 col-sm-12">
          <div class="card">
            <img src="<%= book.image.url ? book.image.url : 'https://www.shutterstock.com/shutterstock/photos/2635944013/display_1500/stock-vector-flat-illustration-of-a-woman-sitting-on-the-floor-using-a-laptop-surrounded-by-books-concept-for-2635944013.jpg' %>" 
              class="card-img-top" 
              alt="Student reading book illustration" 
            >
            <div class="card-body">
              <h5 class="card-title"><%= book.title %></h5>
              <p class="card-text"><strong>Uploaded by:</strong> <%= book.owner?.username || "Unknown Owner" %></p>
              <p class="card-text"><strong>Branch:</strong> <%= book.branch %></p>
              <p class="card-text"><strong>Subject:</strong> <%= book.subject %></p>
              <p class="card-text"><strong>Price:</strong> â‚¹<%= book.price.toFixed(2) %></p>
              <p class="card-text"><strong>Phone:</strong> <%= book.whatsapp ? book.whatsapp : "+91xxxxx xxxxx" %></p>

              <% if(currUser && currUser._id.equals(book.owner._id)) { %>
                <a href="/sh/book/<%= book._id %>/edit" class="btn btn-warning btn-sm mb-1">Edit</a>
                <form 
                  action="/sh/book/<%= book._id %>?_method=DELETE" 
                  method="POST" 
                  style="display:inline;"
                  onsubmit="return confirm('Are you sure you want to delete this book?');"
                >
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
              <% } %>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Footer -->
  <footer>
    <p>&copy; 2025 Campus Exchange | Made for Students</p>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
