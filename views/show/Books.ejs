<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Books | Campus Exchange</title>

  <!-- Bootstrap & FontAwesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />

  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: rgba(0, 0, 0, 0.05);
    }

    /* Navbar */
    header {
      background-color: #2c3e50;
      color: white;
      padding: 15px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      position: sticky;
      top: 0;
      z-index: 1000;
    }

    .logo h2 {
      margin: 0;
      font-weight: 700;
      cursor: pointer;
    }

    nav {
      display: flex;
      align-items: center;
      gap: 1.25rem;
    }

    nav a {
      color: white;
      text-decoration: none;
      font-weight: 600;
      font-size: 1rem;
      transition: color 0.3s ease;
    }

    nav a:hover {
      color: #f1c40f;
    }

    .dropdown-toggle {
      background: transparent;
      border: none;
      color: white;
      font-size: 1.8rem;
      cursor: pointer;
    }

    .dropdown-menu a.dropdown-item {
      color: #2c3e50;
      font-weight: 600;
    }

    .dropdown-menu a.dropdown-item:hover {
      background-color: #3498db;
      color: white;
    }

    /* Hero Section */
    .hero {
      background: linear-gradient(135deg, #3498db, #2980b9);
      color: white;
      text-align: center;
      padding: 60px 20px;
    }

    .hero h1 {
      font-size: 2.5rem;
      font-weight: bold;
      margin-bottom: 10px;
    }

    .hero p {
      font-size: 1.1rem;
      opacity: 0.95;
    }

    /* Cards */
    .container {
      margin-top: 40px;
    }

    .card {
      margin-bottom: 30px;
      border: none;
      border-radius: 12px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
    }

    .card-img-top {
      height: 200px;
      object-fit: cover;
      border-top-left-radius: 12px;
      border-top-right-radius: 12px;
    }

    .card-title {
      font-size: 1.25rem;
      font-weight: 600;
      color: #2c3e50;
    }

    .card-text {
      font-size: 0.95rem;
      color: #555;
    }

    .btn-sm {
      margin-right: 5px;
    }

    /* Footer */
    footer {
      background: #2c3e50;
      color: white;
      text-align: center;
      padding: 25px 20px;
      font-size: 0.95rem;
      font-weight: 500;
      margin-top: 60px;
    }
  </style>
</head>

<body>
<!-- Header -->
  <header role="banner">
    <div class="logo" onclick="location.href='/sh'" role="button" tabindex="0" aria-label="Campus Exchange Home">
      <h2>Campus Exchange</h2>
    </div>

    <nav role="navigation" aria-label="Main Navigation">
      <a href="/sh" title="Home"><i class="fa-solid fa-house"></i></a>
      <a href="/sh/note">Notes</a>
      <a href="/sh/book">Books</a>
      <a href="/sh/stationary">Stationery</a>

      <!-- Dropdown -->
      <div class="dropdown">
        <button
          class="dropdown-toggle"
          type="button"
          id="userDropdown"
          data-bs-toggle="dropdown"
          aria-expanded="false"
          aria-label="User menu"
        >
          <i class="fa-solid fa-circle-user"></i>
        </button>

        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
          <% if (!currUser) { %>
            <li><a class="dropdown-item" href="/sh/signup">Sign Up</a></li>
            <li><a class="dropdown-item" href="/sh/login">Sign In</a></li>
          <% } else { %>
            <li><hr class="dropdown-divider" /></li>
            <li><a class="dropdown-item" href="/sh/logout">Logout</a></li>
          <% } %>
        </ul>
      </div>
    </nav>
  </header>

  <!-- Hero -->
  <section class="hero">
    <h1>Browse Second-Hand Books</h1>
    <p>Affordable books for every subject, shared by students</p>
  </section>


  <!-- Book Grid -->
  <div class="container">
    <div class="row">
      <% for(let book of books) { %>
        <div class="col-lg-4 col-md-6 col-sm-12">
          <div class="card">
            <img src="<%= book.image.url ? book.image.url : 'https://www.shutterstock.com/shutterstock/photos/2635944013/display_1500/stock-vector-flat-illustration-of-a-woman-sitting-on-the-floor-using-a-laptop-surrounded-by-books-concept-for-2635944013.jpg' %>" 

              class="card-img-top" 
              alt="Student reading book illustration" 
            >
            <div class="card-body">
              <h5 class="card-title"><%= book.title %></h5>
              <p class="card-text"><strong>Uploaded by:</strong> <%= book.owner?.username || "Unknown Owner" %></p>
              <p class="card-text"><strong>Branch:</strong> <%= book.branch %></p>
              <p class="card-text"><strong>Subject:</strong> <%= book.subject %></p>
              <p class="card-text"><strong>Price:</strong> â‚¹<%= book.price.toFixed(2) %></p>
                            <p class="card-text"><strong>phone:</strong> <%= book.whatsapp?book.whatsapp : "+91xxxxx xxxxx"%></p>


              <% if(currUser && currUser._id.equals(book.owner._id)){ %>
                <a href="/sh/book/<%= book._id %>/edit" class="btn btn-warning btn-sm mb-1">Edit</a>
                <form 
                  action="/sh/book/<%= book._id %>?_method=DELETE" 
                  method="POST" 
                  style="display:inline;"
                  onsubmit="return confirm('Are you sure you want to delete this book?');"
                >
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
              <% } %>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Footer -->
  <footer>
    <p>&copy; 2025 Campus Exchange | Made for Students</p>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
