      font-weight: 700;
      cursor: pointer;
    }

    nav {
      display: flex;
      align-items: center;
      gap: 1.25rem;
    }

    nav a {
      color: white;
      text-decoration: none;
      font-weight: 600;
      font-size: 1rem;
      transition: color 0.3s ease;
    }

    nav a:hover {
      color: #3498db;
      text-shadow: 0 0 5px #3498db;
    }

    .dropdown-toggle {
      background: transparent !important;
      border: none !important;
      color: white !important;
      font-size: 1.8rem;
      padding: 0;
      cursor: pointer;
    }

    .dropdown-menu a.dropdown-item {
      color: #2c3e50;
      font-weight: 600;
    }

    .dropdown-menu a.dropdown-item:hover {
      background-color: #3498db;
      color: white;
    }

    .hero {
      background: linear-gradient(135deg, #3498db, #2980b9);
      color: white;
      padding: 80px 20px;
      text-align: center;
    }

    .hero h1 {
      font-size: 2.8rem;
      font-weight: 700;
      margin-bottom: 20px;
    }

    .hero p {
      font-size: 1.2rem;
      max-width: 800px;
      margin: auto;
      line-height: 1.6;
    }

    .about-section {
      padding: 60px 20px;
      background-color: white;
      text-align: center;
    }

    .about-section h2 {
      font-size: 2rem;
      margin-bottom: 20px;
      font-weight: 700;
      color: #2c3e50;
    }

    .about-section p {
      font-size: 1.1rem;
      max-width: 800px;
      margin: auto;
      line-height: 1.8;
      color: #555;
    }

    .about-section .features {
      margin-top: 40px;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 40px;
    }

    .feature-card {
      background: #f9f9f9;
      padding: 25px;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
      max-width: 300px;
      text-align: center;
    }

    .feature-card i {
      font-size: 2.5rem;
      color: #3498db;
      margin-bottom: 15px;
    }

    .feature-card h4 {
      font-size: 1.2rem;
      font-weight: 700;
      margin-bottom: 10px;
    }

    footer {
      background: #2c3e50;
      color: white;
      text-align: center;
      padding: 15px 20px;
      margin-top: 60px;
      font-weight: 600;
      font-size: 1rem;
    }
    
